@model Sharebook.ViewModels.LoginViewModel
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobstrusive/jquery.validate.unobstrusive.min.js"></script>
    
}
<div>
<h3>Login</h3>
    <form novalidate  method="POST">
        <div class="alert alert-danger" asp-validation-summary="ValidationSummary.ModelOnly"></div>
        <div class="form-group">
            <label>UserName</label>
            <input asp-for="UserName" class="form-control">
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input asp-for="Password" class="form-control" type="password">
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-lg btn-success" value="Login" type="submit"/>
        </div>
    </form>
</div>