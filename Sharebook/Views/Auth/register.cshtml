@model Sharebook.ViewModels.RegisterViewModel
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobstrusive/jquery.validate.unobstrusive.min.js"></script>
    
}
<div>
    <div class="alert alert-danger" asp-validation-summary="ValidationSummary.ModelOnly"></div>
    <form  novalidate method="POST">
        <div class="form-group">
            <label>User Name :</label>
            <input class="form-control" 
                   asp-for="UserName"
                   />
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label>First Name :</label>
            <input class="form-control" 
                    asp-for="FirstName"/>
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>
        
        <div class="form-group">
            <label>Last Name :</label>
            <input class="form-control" 
                    asp-for="LastName"/>
            <span class="text-danger"asp-validation-for="LastName"></span>
        </div>
        
        <div class="form-group">
            <label>Email :</label>
            <input class="form-control" 
                    asp-for="Email""/>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        
        <div class="form-group">
            <label>Password :</label>
            <input class="form-control" 
                    asp-for="Password"/>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        
        <div class="form-group">
            <input class="btn btn-lg btn-success" type="submit" value="Register"/>
        </div>
        
    </form>
</div>